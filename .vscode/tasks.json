{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run all tests",
      "type": "shell",
      "command": "vendor/bin/phpunit tests",
      "group": "test",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Run test for current file",
      "type": "shell",
      "command": "vendor/bin/phpunit --filter=${fileBasenameNoExtension}",
      "group": "test",
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
